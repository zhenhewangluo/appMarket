<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- Title Bar -->

    <include layout="@layout/title_notext" />

    <!-- App Header Info -->

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="86dip" 
        android:background="#e4e4e4"
        >

        <!-- Layer 2, in the front -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="86dip" >

            <FrameLayout 
                android:layout_width="86dip"
                android:layout_height="86dip"
                >
	            <ImageView
                android:id="@+id/icon"
                android:layout_width="56dip"
                android:layout_height="56dip"
                android:layout_gravity="center"
                 android:src="@drawable/app_icon"
                 />
	            <ImageView
	            android:paddingTop="55dip"
                android:layout_width="40dip"
                android:layout_height="wrap_content"
	            android:src="@drawable/free"
                />
	            
	            
            </FrameLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="86dip"
                android:layout_marginLeft="9dip"
                android:layout_weight="1"
                android:orientation="vertical" >
                <TextView
                    android:id="@+id/name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/download_cnt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="下载：    次"
                    android:textColor="@color/gray" />
                <!-- 下载次数 -->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal" >

                    <!-- Rating Bar -->

                    <include
                        android:id="@+id/rating_stars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        layout="@layout/rating_stars"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/avg_Point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="5dip"
                        android:textColor="#db6607"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="86dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="5dip"
                    android:text=" "
                    android:textColor="#21b4ef"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/stars_grade"
                        android:layout_width="40dip"
                        android:layout_height="45dip"
                        android:layout_weight="1"
                        android:src="@drawable/comment" />

                    <ImageView
                        android:id="@+id/share_btn"
                        android:layout_width="40dip"
                        android:layout_height="45dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="1"
                        android:src="@drawable/share" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <!-- Detail ViewPager -->


    <!--
         com.viewpagerindicator.TitlePageIndicator
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#1800FF00"
        app:footerColor="#FF22AA22"
        app:footerIndicatorHeight="3dp"
        app:footerIndicatorStyle="underline"
        app:footerLineHeight="2dp"
        android:padding="10dip"
        app:selectedBold="true"
        app:selectedColor="#FFFFFFFF"
        app:textColor="#FF777777"
    -->

    <com.viewpagerindicator.TitlePageIndicator
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/move_bg"
        android:padding="0dip"
        app:footerColor="#1a774a"
        app:footerIndicatorHeight="0dp"
        app:footerIndicatorStyle="oval"
        app:footerLineHeight="0dp"
        app:textBackground="@drawable/move"
        app:selectedBold="false"
        app:selectedColor="#FFFFFFFF"
        app:textColor="#FFeeeeee"
        app:textSize="18sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:persistentDrawingCache="all" />
    <!-- Bottom button -->

    <FrameLayout
        android:id="@+id/bottombar"
        android:layout_width="fill_parent"
        android:layout_height="46dip"
        android:background="@drawable/footer_bg" >

        <!-- app status: INIT or DOWNLOADED or INSTALLED or HAS_UPDATE -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone" >

            <LinearLayout
                android:id="@+id/one_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone" >

                <include
                    android:id="@+id/btn11"
                    android:layout_width="fill_parent"
                    android:layout_height="37dip"
                    android:layout_marginLeft="50dip"
                    android:layout_marginRight="50dip"
                    android:layout_marginTop="4dip"
                    layout="@layout/long_button" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/two_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone" >

                <include
                    android:id="@+id/btn21"
                    android:layout_width="fill_parent"
                    android:layout_height="37dip"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:layout_marginTop="4dip"
                    android:layout_weight="1"
                    layout="@layout/long_button" />

                <include
                    android:id="@+id/btn22"
                    android:layout_width="fill_parent"
                    android:layout_height="37dip"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:layout_marginTop="4dip"
                    android:layout_weight="1"
                    layout="@layout/long_button" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/three_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone" >

                <include
                    android:id="@+id/btn31"
                    android:layout_width="fill_parent"
                    android:layout_height="37dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="12dip"
                    android:layout_marginTop="4dip"
                    android:layout_weight="1"
                    layout="@layout/long_button" />

                <include
                    android:id="@+id/btn32"
                    android:layout_width="fill_parent"
                    android:layout_height="37dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="12dip"
                    android:layout_marginTop="4dip"
                    android:layout_weight="1"
                    layout="@layout/long_button" />

                <include
                    android:id="@+id/btn33"
                    android:layout_width="fill_parent"
                    android:layout_height="37dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="12dip"
                    android:layout_marginTop="4dip"
                    android:layout_weight="1"
                    layout="@layout/long_button" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottombar_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="37dip"
                android:layout_weight="1"
                android:text="" />

            <include
                android:id="@+id/btn1"
                android:layout_width="fill_parent"
                android:layout_height="37dip"
                android:layout_weight="1"
                layout="@layout/long_button" />

            <include
                android:id="@+id/btn2"
                android:layout_width="fill_parent"
                android:layout_height="37dip"
                android:layout_weight="1"
                layout="@layout/long_button"
                android:visibility="gone" />

            <include
                android:id="@+id/btn3"
                android:layout_width="fill_parent"
                android:layout_height="37dip"
                android:layout_weight="1"
                layout="@layout/long_button"
                android:visibility="gone" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="37dip"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <!-- app status: DOWNLOADING or PAUSE -->

        <LinearLayout
            android:id="@+id/bottombar_progress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/pause_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dip"
                android:layout_weight="1"
                android:src="@drawable/download_pause" />

            <ImageView
                android:id="@+id/resume_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/download_resume"
                android:visibility="gone" />

            <include
                android:id="@+id/progress"
                android:layout_width="162dip"
                android:layout_height="28dip"
                android:layout_gravity="center"
                layout="@layout/fancy_progressbar" />

            <ImageView
                android:id="@+id/stop_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dip"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/download_delete" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>