<?xml version="1.0" encoding="utf-8"?>
<com.market.hjapp.ui.view.AppItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_item_bg"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- 底层线性布局  水平布局 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="68dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <!-- 左边应用程序图标icon -->
			 <FrameLayout 
			      android:id="@+id/FrameLayout1"
                android:layout_width="56dip"
                android:layout_height="56dip"
                android:layout_gravity="center"
                android:layout_marginLeft="5dip"
                >
	            <ImageView
                android:id="@+id/icon"
                android:layout_width="42dip"
                android:layout_height="42dip"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/app_icon" />
	            <ImageView
	            android:paddingTop="30dip"
	            android:paddingRight="10dip"
                android:layout_width="40dip"
                android:layout_height="wrap_content"
	            android:src="@drawable/free"
                />
	            
	            
            </FrameLayout>

          
            <!-- 右边应用程序信息   帧布局 用于显示多层信息 -->

            <FrameLayout
                android:id="@+id/FrameLayout2"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:layout_marginRight="10dip" >

                <!-- 无下载时间的线性布局   上：应用程序名字  下：应用程序作者 -->

                <LinearLayout
                    android:id="@+id/layout_no_downloadtime"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                   <!--  android:focusable="true"
                        android:focusableInTouchMode="true" -->
                    <com.market.hjapp.ui.view.ScrollForeverTextView
                        android:id="@+id/name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:ellipsize="marquee"
                        android:lines="1"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                    <!-- ellipsize属性 设置当文字过长时,该控件该如何显示。有如下值设置：”start”—–省略号显示在开头；”end”——省略号显示在结尾；”middle”—-省略号显示在中间；”marquee” ——以跑马灯的方式显示(动画横向移动) -->
                    <!-- marqueeRepeatLimit属性 在ellipsize指定marquee的情况下，设置重复滚动的次数，当设置为marquee_forever时表示无限次。 -->
                    <!-- focusable属性 自己猜测的，应该是能否获得焦点，同样focusableInTouchMode应该是滑动时能否获得焦点。 -->

                    <com.market.hjapp.ui.view.ScrollForeverTextView
                        android:id="@+id/author"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:ellipsize="marquee"
                        android:lines="1"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="#424242"
                        android:textSize="12dip" />

                    <!--
                <com.market.hjapp.ui.view.ScrollForeverTextView
				android:id="@+id/slogan"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"	
				android:textSize="12dip"
				android:textColor="#b2b2b2"
				android:singleLine="true"
				android:ellipsize="end" />
                    -->

                </LinearLayout>
                <!-- 包含下载时间的线性布局  上：应用程序名字  下：左 下载者昵称 右 下载时间 -->

                <LinearLayout
                    android:id="@+id/layout_show_downloadtime"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <com.market.hjapp.ui.view.ScrollForeverTextView
                        android:id="@+id/name1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:ellipsize="marquee"
                        android:lines="1"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="#04a0db"
                        android:textSize="14dip"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <com.market.hjapp.ui.view.ScrollForeverTextView
                            android:id="@+id/nickname"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dip"
                            android:layout_weight="1"
                            android:ellipsize="marquee"
                            android:lines="1"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:textColor="#424242"
                            android:textSize="14dip" />

                        <com.market.hjapp.ui.view.ScrollForeverTextView
                            android:id="@+id/time"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dip"
                            android:layout_marginTop="4dip"
                            android:layout_weight="1"
                            android:ellipsize="marquee"
                            android:lines="1"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:textColor="#80C0FF"
                            android:textSize="14dip" />
                    </LinearLayout>

                    <!--
                 <com.market.hjapp.ui.view.ScrollForeverTextView
				android:id="@+id/slogan1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="12dip"
				android:textColor="#b2b2b2"
				android:singleLine="true"
				android:ellipsize="end" />
                    -->

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/app_info1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="100dip"
                    android:paddingRight="10dip"
                    android:visibility="gone" >

                    <com.market.hjapp.ui.view.ScrollForeverTextView
                        android:id="@+id/price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dip"
                        android:ellipsize="marquee"
                        android:lines="1"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/price"
                        android:textColor="#db6607"
                        android:textSize="14dip" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/app_action"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingRight="10dip"
                    android:visibility="gone" >

                    <include
                        android:id="@+id/app_action_btn"
                        android:layout_width="72dip"
                        android:layout_height="42dip"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="12dip"
                        layout="@layout/long_button" />
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
        <!-- 最上层的应用程序信息  包含价格和星级 -->

        <RelativeLayout
            android:id="@+id/app_info"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="3dip"
            android:paddingLeft="8dip"
            android:paddingRight="3dip"
            android:paddingTop="45dip" >

            <com.market.hjapp.ui.view.ScrollForeverTextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="7dip"
                android:layout_marginTop="8dip"
                android:text="@string/price"
                android:textColor="#3ab8eb"
                android:textSize="12dip" 
                android:visibility="gone"
                />

            <include
                android:id="@+id/rating_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="52dip"
                android:layout_marginRight="2dip"
                android:layout_marginTop="8dip"
                layout="@layout/rating_stars" />
        </RelativeLayout>
    </FrameLayout>

</com.market.hjapp.ui.view.AppItemView>