<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_item"
    android:layout_width="fill_parent"
    android:layout_height="68dip"
    android:orientation="vertical" 
    android:background="@drawable/listview_item_bg"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip" >

            <TextView
                android:id="@+id/tv_comment_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comment_user_label"
                android:textColor="#807f7f"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/comment_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_comment_user"
                android:ellipsize="end"
                android:maxWidth="100dip"
                android:singleLine="true"
                android:textColor="#db6607"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#807f7f"
                android:textSize="14dip" />
        </RelativeLayout>

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="3dip"
            android:textColor="#357294"
            android:textSize="16dip" />
    </LinearLayout>

</LinearLayout>