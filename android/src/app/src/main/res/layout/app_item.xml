<?xml version="1.0" encoding="utf-8"?>
<com.market.hjapp.ui.view.AppItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="68dip"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="68dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="68dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/listview_item_bg"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon"
                android:layout_width="50dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="13dip"
                android:layout_marginRight="11dip"
                android:gravity="center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/app_icon" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <LinearLayout
                    android:id="@+id/layout_no_downloadtime"
                    android:layout_width="160dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="left|center_vertical"
                    android:orientation="vertical" >

                    <com.market.hjapp.ui.view.ScrollForeverTextView
                        android:id="@+id/name"
                        android:layout_width="140dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="left|center_vertical"
                        android:lines="1"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <com.market.hjapp.ui.view.ScrollForeverTextView
                        android:id="@+id/author"
                        android:layout_width="140dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="left|center_vertical"
                        android:lines="1"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="#424242"
                        android:textSize="14sp" />

                    <!--
                <TextView
				android:id="@+id/slogan"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"	
				android:textSize="12dip"
				android:textColor="#b2b2b2"
				android:singleLine="true"
				android:ellipsize="end" />
                    -->

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_show_downloadtime"
                    android:layout_width="190dip"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <com.market.hjapp.ui.view.ScrollForeverTextView
                        android:id="@+id/name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dip"
                        android:ellipsize="marquee"
                        android:lines="1"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="#04a0db"
                        android:textSize="18dip"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <com.market.hjapp.ui.view.ScrollForeverTextView
                            android:id="@+id/nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dip"
                            android:ellipsize="marquee"
                            android:lines="1"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:maxWidth="100dip"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:textColor="#424242"
                            android:textSize="14dip" />

                        <com.market.hjapp.ui.view.ScrollForeverTextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dip"
                            android:layout_marginTop="4dip"
                            android:ellipsize="marquee"
                            android:lines="1"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:textColor="#80C0FF"
                            android:textSize="14dip" />
                    </LinearLayout>

                    <!--
                 <TextView
				android:id="@+id/slogan1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="12dip"
				android:textColor="#b2b2b2"
				android:singleLine="true"
				android:ellipsize="end" />
                    -->

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/app_info"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="100dip"
                    android:paddingRight="10dip" >

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="14dip"
                        android:text="@string/price"
                        android:textColor="#db6607"
                        android:textSize="16dip" />

                    <include
                        android:id="@+id/rating_stars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="40dip"
                        layout="@layout/rating_stars" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/app_info1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="100dip"
                    android:paddingRight="10dip"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="14dip"
                        android:text="@string/price"
                        android:textColor="#db6607"
                        android:textSize="16dip" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/app_action"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingRight="10dip"
                    android:visibility="gone" >

                    <include
                        android:id="@+id/app_action_btn"
                        android:layout_width="72dip"
                        android:layout_height="42dip"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dip"
                        layout="@layout/long_button" />
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

</com.market.hjapp.ui.view.AppItemView>