<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relates_app"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#e4e4e4"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relative_loading_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ProgressBar
                android:id="@+id/comm_progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dip"
                android:indeterminateBehavior="repeat"
                android:indeterminateDrawable="@drawable/progressbar"
                android:indeterminateOnly="true"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/background_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dip"
                android:layout_toRightOf="@id/comm_progress"
                android:text="@string/loading_bg_text"
                android:textColor="#fff"
                android:textSize="16dip"
                android:textStyle="bold" />
        </RelativeLayout>

        <ListView
            android:id="@+id/app_list"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/appdetailactivity_threepage_height"
            android:layout_marginTop="4dip"
            android:cacheColorHint="#00000000"
            android:divider="@color/transparent"
            android:dividerHeight="1dip"
            android:listSelector="@color/transparent"
            android:scrollbars="vertical"
            android:scrollingCache="true" />
    </LinearLayout>

</LinearLayout>